{
    "compilerOptions": {
      "plugins": [
        {
          "name": "typescript-styled-plugin"
        }
      ],
      "paths": {
        "components/*": ["components/*"],
        "utils/*": ["utils/*"],
        "config/*": ["config/*"]
      },
      "baseUrl": "../src",
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "module": "es2015",
      "target": "es5",
      "lib": ["es6", "dom"],
      "sourceMap": true,
      "allowJs": false,
      "jsx": "react",
      "moduleResolution": "node",
      "rootDir": "../",
      "outDir": "../ts_build",
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "declaration": true
    },
    "include": [
      "../src/**/*"
    ],
    "exclude": [
      "node_modules",
      "build",
      "dist",
      "scripts",
      "acceptance-tests",
      "webpack",
      "jest",
      "src/setupTests.ts",
      "**/*/*.test.ts",
      "examples"
    ]
  }