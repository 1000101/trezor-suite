        "@tippy.js/react": "^2.1.1",
        "prop-types": "^15.7.2",
        "react-router-dom": "^4.3.1",
        "react-select": "^2.3.0",
        "react-switch": "^4.1.0",
        "react-textarea-autosize": "^7.1.0"
